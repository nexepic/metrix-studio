{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Metrix Studio",
  "version": "0.1.0",
  "identifier": "Nexepic",
  "plugins": {
    "os": {},
    "opener": {}
  },
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Metrix Studio",
        "width": 1200,
        "height": 800,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "shadow": false,
        "trafficLightPosition": {
          "x": 16,
          "y": 20
        },
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "vendor/metrix/lib/libmetrix.dylib"
    ]
  }
}